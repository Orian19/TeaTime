<main>
    <div class="add-padding">
        <h1>Admin Panel</h1>
        <h2>User Activities</h2>
        <input type="text" id="userFilter" placeholder="Filter by username prefix">
        <table id="activityTable">
            <thead>
                <tr>
                    <th>Date/Time</th>
                    <th>Username</th>
                    <th>Activity Type</th>
                </tr>
            </thead>
            <tbody id="activityTableBody">
                <!-- Activities will be populated here by JavaScript -->
            </tbody>
        </table>
        <h2>Manage Products</h2>
        <form id="addProductForm">
            <input type="text" id="productTitle" placeholder="Product Title" required>
            <textarea id="productDescription" placeholder="Product Description" required></textarea>
            <input type="text" id="productPicture" placeholder="Picture URL" required>
            <input type="number" id="productPrice" placeholder="Price" step="0.01" required>
            <button type="submit">Add Product</button>
        </form>
        <div id="productList">
            <!-- Products will be populated here by JavaScript -->
        </div>
    </div>
</main>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/js/admin.js" defer></script>