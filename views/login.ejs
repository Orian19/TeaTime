<link rel="stylesheet" href="/css/login-register.css">
<main>
    <div class="login-container">
        <h1 class="page-heading">Login to TeaTime</h1>
        
        <% if (locals.error) { %>
            <div class="alert-error" id="loginAlert">
                <p><%= error %></p>
                <button type="button" class="close-btn" onclick="closeAlert()">&times;</button>
            </div>
        <% } %>
        
        <form class="login-form" action="/auth/login" method="POST">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" placeholder="Enter your username" required>
            
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
            
            <div class="remember-me">
                <input type="checkbox" id="rememberMe" name="rememberMe">
                <label for="rememberMe">Remember me</label>
            </div>
            <button class="button" type="submit">Login</button>
            
            <p>Don't have an account? <a href="/auth/register">Register</a></p>
        </form>
        <div id="loginAlert" style="display: none;">
            <span id="loginAlertMessage"></span>
            <button id="closeAlertButton">Close</button>
        </div>
    </div>
</main>
<script src="/js/alert.js"></script>