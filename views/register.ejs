<link rel="stylesheet" href="/css/login-register.css">
<main class="register-container">
    <h1 class="page-heading">Register for TeaTime</h1>

    <% if (locals.error) { %>
        <div class="alert-error" id="loginAlert">
            <p><%= error %></p>
            <button type="button" class="close-btn" onclick="closeAlert()">&times;</button>
        </div>
    <% } %>

    <form class="register-form" action="/auth/register" method="POST">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required>
            
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
            
            <button type="submit" class="button">Register</button>
            
            <p>Already have an account? <a href="/auth/login">Login</a></p>

    </form>
    <div id="loginAlert" style="display: none;">
        <span id="loginAlertMessage"></span>
        <button id="closeAlertButton">Close</button>
    </div>
</main>
<script src="/js/alert.js"></script>
